<%- include("../partials/header")%>

<div class="container">
    <div style="text-align: center;">
        <h1 >Create a new Campground</h1>
    </div class="row">
        <div style="width: 30%; margin: 30px auto;">
            <form action="/campgrounds" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="name" placeholder="Title" id="">
                </div>
                <div class="form-group">
                    <input class="form-control" type="number" name="price" placeholder="Price" id="" min="0.01" step="0.01">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="url" placeholder="Image url" id="">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="desc" placeholder="Enter desc" id="">
                </div>
                <div class="form-group">
                    <button class="btn btn-md btn-success btn-block">Submit</button>
                </div>
                <a href="/campgrounds">Go back</a>
            </form>
        </div>
    </div>
    
</div>

<%- include("../partials/footer")%>